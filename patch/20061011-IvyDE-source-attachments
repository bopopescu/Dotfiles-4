+package org.jayasoft.ivyde.eclipse.cpcontainer.fragmentinfo;
+
+import java.io.File;
+
+import org.eclipse.core.runtime.IPath;
+import org.eclipse.core.runtime.Path;
+import org.eclipse.jface.preference.IPreferenceStore;
+
+public class RepositoryPackageFragmentExtraInfo extends PreferenceStoreInfo {
+    public RepositoryPackageFragmentExtraInfo(IPreferenceStore preferenceStore) {
+        super(preferenceStore);
+    }
+
+    public IPath getSourceAttachment(Path path) {
+        IPath prefsPath = super.getSourceAttachment(path);
+        if (prefsPath != null)
+            return prefsPath;
+        File file = path.toFile();
+        String basename = file.getName();
+        String parentdir = file.getParentFile().getParent();
+        return new Path(parentdir + "/sources/" + basename);
+    }
+}
