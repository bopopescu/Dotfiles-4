#!/usr/bin/make -f
# -*- makefile -*-
# Uncomment this to turn on verbose mode.
#export DH_VERBOSE=1

DEB_PYTHON_SYSTEM=pysupport

################################################################################
# CDBS File Inclusions and Variable Declarations
################################################################################
include /usr/share/cdbs/1/rules/debhelper.mk
include /usr/share/cdbs/1/rules/simple-patchsys.mk
include /usr/share/cdbs/1/class/python-distutils.mk

# Change the interpreter path generated by distutils, as we do not depend on a
# specific version of Python. Debian will detect this and generate the proper
# generic dependencies.
DEB_PYTHON_BUILD_ARGS += -e /usr/bin/python
