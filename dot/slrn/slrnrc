% Purpose:       slrn settings
% Date Created:  2003-11-26 12:58:12
% Revision:      $Id: slrnrc 1073 2004-11-05 21:35:01Z jbq $
%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%

% Load slang function definitions
interpret ".slrn/defs"

set hostname "caraldi.com"
set username "jb.quenot"
set realname "Jean-Baptiste Quenot"

% The name of your signature file.  If "", no signature is added.
set signature ".signature"

% This sets the attribution lines for follow-ups and replies.  The following
% format specifiers are recognized:
%  %d:date, %D:date (formatted), %r:real name, %R:first name,
%  %f:email address, %s:subject, %m:msgid, %n:newsgroups, %%: percent
set followup_string "* %r:"

% Which headers do you want to see by default?
% You can also match all headers starting with a given string and exclude
% specific headers by preceding them with "!" (e.g. use "X-,!X-Trace:" to
% display all the "X-"headers except "X-Trace:").
visible_headers "From:,Subject:,Date:,X-Newsreader,User-Agent,X-Mailer"

% Setting the header window display format.
header_display_format 0 "%F %S %24r %t%s"
header_display_format 1 "%F%G%-5l:[%12r]%t%s"
header_display_format 2 "%F%-5l:%t%s"
header_display_format 3 "%F%-5S%-5l:%t%50s %r"
header_display_format 4 "%F%-5S [%10r]:%t%49s %-19g[%17d]"

% Draw cursor bar ala tin instead of slrn "->" cursor?
set display_cursor_bar	1

% Set to 1 to have slrn scroll by full page instead of by line.
set scroll_by_page 1

% Setting either of these to 0 will enable you to move directly to the
% next article/group without confirmation
set query_next_article 0

% Set this to 0 for no-confirmation on follow, reply, quit, etc...
set confirm_actions 0

% Name of score file.
set scorefile ".slrn/score"

% If non-zero, abort posting or email operation if the file was not modified
% by the editor.
set abort_unmodified_edits 1

% If non-zero, header numbers will be displayed in the left-margin of the
% header window.  These numbers may be used as ``thread selectors''.
set use_header_numbers 0

% Sort by thread, score, subject
set sorting_method 7

%---------------------------------------------------------------------------
% Colors
%---------------------------------------------------------------------------
color article		"default"	"default"
color author		"default"	"default"
color boldtext		"brightblue"	"default"
color box		"default"	"default"
color cursor		"yellow"	"red"
color date		"default"	"default"  
color description	"default"	"default"
color error		"red"		"default"
color frame		"brown"		"blue"
color from_myself	"brightmagenta"	"default"	"bold"
color group		"default"	"default"
color grouplens_display	"default"	"default"
color header_name	"red"		"default"
color header_number	"red"		"default"
color headers		"red"		"default"
color neg_score		"green"		"default"
color pos_score		"blue"		"default"
color high_score	"red"		"default"
color italicstext	"magenta"	"default"
color menu		"yellow"		"blue"
color menu_press	"default"	"yellow"
color message		"default"	"default"
color normal		"default"	"default"
color pgpsignature	"default"	"default"
color quotes		"magenta"	"default"
color quotes1		"cyan"		"default"
color quotes2		"brown"		"default"
color quotes3		"green"		"default"
color quotes4		"brown"		"default"
color quotes5		"brown"		"default"
color quotes6		"brown"		"default"
color quotes7		"brown"		"default"
color response_char	"green"		"default"
color signature		"red"		"default"
color selection		"brown"		"blue"
color status		"yellow"		"blue"
color subject		"default"	"default"
color thread_number	"default"	"default"
color tilde		"green"		"default"
color tree		"magenta"	"default"
color underlinetext	"cyan"		"default"
color url		"magenta"	"default"	"bold"
color verbatim		"green"		"default"

