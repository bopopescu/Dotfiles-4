	hosts=(${${${(f)"$(<$HOME/.ssh/known_hosts)"}%%\ *}%%,*})
	zstyle ':completion:*:hosts' hosts $hosts 
fi

# Add some useful readline bindings to the vi mode: best of both worlds :)
