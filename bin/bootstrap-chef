#! /bin/sh -e

apt-get update
apt-get install curl
curl -L https://www.opscode.com/chef/install.sh | sudo bash
mkdir -p /etc/chef

cat > /etc/chef/client.rb << EOF
log_level        :auto
log_location     STDOUT
chef_server_url  "https://api.opscode.com/organizations/cmlid"
validation_client_name "cmlid-validator"
EOF
