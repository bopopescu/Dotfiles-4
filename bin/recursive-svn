#! /bin/sh

COMMAND=$1
test -z "$COMMAND" && exit 1
shift

DIRS=$*
test -z "$DIRS" && DIRS=.

for DIR in $DIRS ; do
    for dir in $(find $DIR -name .svn) ; do
        dir=$(dirname $dir)
        result=$(svn $COMMAND -N $dir)

        if test -n "$result" ; then
            echo
            echo ${dir#$DIR/}:
            echo "$result" | sed -e 's|$DIR/||'
        fi
    done
done
