#! /bin/bash

set -ueo pipefail

have() {
  type $* >&/dev/null
}

if have tempfile; then
  make_tempfile() {
    tempfile -p $*
  }
else
  make_tempfile() {
    mktemp -t $*
  }
fi

tempfile=$(make_tempfile $(basename $0))
cherry HEAD $* > $tempfile

if test -s $tempfile; then
  tig --stdin --no-walk --reverse < $tempfile
else
  echo "All commits merged, good job!"
fi
