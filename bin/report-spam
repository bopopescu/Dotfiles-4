#! /bin/sh

for file in $(find $HOME/mail/.SPAM-report/cur -type f) ; do
    echo Reporting spam for $file
    spamassassin -r $file
    rm -f $file
done

for file in $(find $HOME/mail/.SPAM-ham/cur -type f) ; do
    echo Reporting ham for $file
    sa-learn --ham $file
    mv $file $HOME/mail/cur
done
