#! /bin/sh

list_mailboxes() {
    if test -f /var/mail/jbq ; then
        echo /var/mail/jbq
    fi

    if test -d ~/mail ; then
        find -s ~/mail ! -name .SPAM -type d -maxdepth 1
    fi

    if test -d ~/burn/backups/mail ; then
        find -s ~/burn/backups/mail -type f
    fi
}

list_mailboxes | xargs important-messages.py
